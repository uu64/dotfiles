{
    "title": "iTerm settings",
    "rules": [
        {
            "description": "left_control to left_command(without iTerm)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com\\.apple\\.Terminal$",
                                "^com\\.googlecode\\.iterm2",
                                "^com\\.microsoft\\.VSCode$"
                            ]
                        }
                    ]
                }
            ]
       }
    ]
}
